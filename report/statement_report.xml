<odoo>
  <data>
    <!-- PDF Action -->
    <record id="action_statement_report_pdf" model="ir.actions.report">
      <field name="name">Cari Ekstre Raporu</field>
      <field name="model">kuzey.statement.wizard</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">kuzey_account_statement.report_statement</field>
      <field name="file">kuzey_account_statement.report_statement</field>
      <field name="print_report_name">'Cari Ekstre - %s' % (object.partner_id.name)</field>
    </record>

    <!-- QWeb Template -->
    <template id="report_statement">
      <t t-call="web.external_layout">
        <t t-set="o" t-value="object"/>

        <div class="page">
          <h2 style="text-align:center;">Cari Ekstre</h2>
          <p><strong>Cari:</strong> <t t-esc="o.partner_id.name"/></p>
          <p><strong>Tarih Aralığı:</strong> <t t-esc="o.date_from"/> - <t t-esc="o.date_to"/></p>
          <p><strong>Detaylı:</strong> <t t-esc="o.is_detailed and 'Evet' or 'Hayır'"/></p>

          <p>Rapor verileri burada listelenecek.</p>
        </div>
      </t>
    </template>
  </data>
</odoo>